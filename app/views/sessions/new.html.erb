<div >
  <h2 class="ui center aligned header">
    Welcome to MessageMe - <em>a complete Chat App</em></h2>
</div>

<h4 class="ui center aligned medium icon header">
  <i class="circular orange inverted power icon"></i>
  Please log in to continue
</h4>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_with scope: :session, 
                    local: true, 
                    class: "ui form", 
                    role: 'form',
                    url: login_path do |f| %>
        <div class="ui form">
          <div class="field">
            <%= f.label :username %>
            <div class="ui left icon input">
              <%= f.text_field :username, placeholder: "Username", autofocus: true %>
              <i class="user icon"></i>
            </div>
          </div>
          <div class="field">
            <%= f.label :password %>
            <div class="ui left icon input">
              <%= f.password_field :password, placeholder: "Password" %>
              <i class="lock icon"></i>
            </div>
          </div>
          <%= f.button "Login", class: "ui orange submit button" %>
        </div>
      <% end %>
    </div>
    <div class="middle aligned column">
      <div class="ui big button orange">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>