<% flash.each do |name, msg| %>
  <div class="ui two column centered grid flashbox">
    <div class="column">
      <div class='ui <%= "#{name}" %> message'>
        <i href="#" class="close icon" data-dismiss="alert"></i>
        <%= content_tag :div, msg, :id => "flash_#{name}", class: 'header' if msg.is_a?(String) %>
      </div>
    </div>
  </div>
<% end %>